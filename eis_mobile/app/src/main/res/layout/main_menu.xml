<?xml version="1.0" encoding="utf-8"?><!-- главное меню -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_bar"
    style="@style/MainMenu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:baselineAligned="false"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/scanner"
                style="@style/MainMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:drawableTop="@drawable/qr_scan"
                android:onClick="onClick"
                android:singleLine="false"
                android:text="@string/scan_main"
                android:textIsSelectable="false"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/line" />

            <TextView
                android:id="@+id/timetable"
                style="@style/MainMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:drawableTop="@drawable/timetable"
                android:onClick="onClick"
                android:text="@string/timetable"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/line" />

            <TextView
                android:id="@+id/info"
                style="@style/MainMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:drawableTop="@drawable/info"
                android:onClick="onClick"
                android:text="@string/info"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/line" />

            <TextView
                android:id="@+id/login"
                style="@style/MainMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:drawableTop="@drawable/login"
                android:onClick="onClick"
                android:text="@string/login"
                android:textIsSelectable="true"
                android:textSize="13dp" />
        </TableRow>
    </TableLayout>

</LinearLayout><!-- главное меню -->