<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#ffffff</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- текст ActionBar -->
    <style name="MyActionBarTitleText">
        <item name="android:textColor">#065B4F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- текст кнопок главного меню -->
    <style name="MainMenuText">
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- фон главного меню -->
    <style name="MainMenu">
        <item name="android:background">#065B4F</item>
    </style>

    <!-- фон главного экрана -->
    <style name="MainBG">
        <item name="android:background">#ffe8e8e8</item>
    </style>

    <!-- button style -->
    <style name="Button">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ffff791f</item>
    </style>

    <style name="AlertDialogError" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColor">#ffe61711</item>
    </style>

</resources>